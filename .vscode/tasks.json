{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release",
				"--all-targets",
				"--all-features",
				"--verbose"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "nextest",
			"args": [
				"run",
				"--all-targets",
				"--all-features",
				"--failure-output=final",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo nextest"
		},
		{
			"type": "cargo",
			"command": "nextest",
			"args": [
				"run",
				"${input:testName}",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "rust: run single test"
		},
		{
			"type": "cargo",
			"command": "tauri",
			"args": [
				"dev",
				"--no-watch",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: tauri dev"
		},
		{
			"type": "cargo",
			"command": "tauri",
			"args": [
				"build",
				"--no-bundle",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: tauri build"
		},
		{
			"type": "cargo",
			"command": "llvm-cov",
			"args": [
				"nextest",
				"--ignore-run-fail",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: coverage"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--all-targets",
				"--all-features",
				"--",
				"-Dwarnings",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: cargo clippy"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--all-targets",
				"--all-features",
				"--release",
				"--",
				"-Dwarnings",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: cargo clippy --release"
		},
		{
			"type": "cargo",
			"command": "install",
			"args": [
				"--bin=mtorrent",
				"--path=mtorrent",
				"--profile=release",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: cargo install mtorrent"
		}
	],
	"inputs": [
		{
			"id": "testName",
			"type": "promptString",
			"default": "${selectedText}",
			"description": "Test name"
			// "command": "rust-analyzer.run",
		}
	]
}