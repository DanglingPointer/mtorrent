{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "update",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo update",
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--release",
				"--all-targets",
				"--all-features",
				"--verbose"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "nextest",
			"args": [
				"run",
				"--all-targets",
				"--all-features",
				"--failure-output=final",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo nextest"
		},
		{
			"type": "cargo",
			"command": "llvm-cov",
			"args": [
				"nextest",
				"--ignore-run-fail",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: coverage"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--all-targets",
				"--all-features",
				"--release",
				"--",
				"-Dwarnings",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: cargo clippy --release"
		}
	]
}